<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent" android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/laout">
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.codesignet.consalto.Home.Home.activity.HomeActivity">
        <EditText
            android:id="@+id/search"
            android:layout_width="285dp"
            android:layout_height="40dp"
            android:hint="Search"
            android:layout_marginTop="20dp"
            android:paddingRight="77dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/search"
            android:background="@drawable/rounded_edittext"
            />
        <Button
            android:id="@+id/service_filter"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/service_filter"
            />
        <Button
            android:id="@+id/department_filter"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:enabled="false"
            android:background="@drawable/department_filter"
            />
        <Button
            android:id="@+id/menue"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="Menu"
            android:textColor="#ffff"
            android:textAlignment="center"
            android:layout_marginLeft="230dp"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:layout_marginTop="440dp"
            android:paddingLeft="10dp"
            android:background="@drawable/menue3"
            />
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/spinnerlayout">
            <ListView
                android:id="@+id/spinner1"
                android:background="#ffff"
                android:layout_height="200dp"
                android:layout_width="117dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="50dp"
                android:entries="@array/services_array"
                android:visibility="invisible"
                >
            </ListView>
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/spinner2layout">
            <ListView
                android:id="@+id/spinner2"
                android:background="#ffff"
                android:layout_height="200dp"
                android:layout_width="117dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="50dp"
                android:visibility="invisible"
                >
            </ListView>
        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:id="@+id/spinner3layout">
            <ListView
                android:id="@+id/spinner3"
                android:background="#ffff"
                android:layout_height="200dp"
                android:layout_width="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:visibility="invisible"
                >
            </ListView>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutFragUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:orientation="horizontal"
></LinearLayout>
    <LinearLayout
        android:id="@+id/layoutFragDown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:orientation="vertical"
        ></LinearLayout>
</fragment>

</FrameLayout>

